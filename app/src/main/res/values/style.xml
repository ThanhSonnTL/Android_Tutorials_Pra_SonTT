<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"
        parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="AppTheme.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ScoreButtons" parent="AppTheme">
        <item
            name="android:background">@drawable/button_background</item>
    </style>

    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_plus</item>
        <item name=
            "android:contentDescription">eaweawe</item>
    </style>

    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_remove_24</item>
        <item name=
            "android:contentDescription"/>
    </style>

    <style name="ScoreText">
        <item name= "android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="TeamText">
        <item name=
            "android:textAppearance">@style/TextAppearance.AppCompat.Display1
        </item>
    </style>

    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>

